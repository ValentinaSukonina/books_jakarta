CREATE TABLE Book (
    id CHAR(36) PRIMARY KEY UNIQUE,
    title VARCHAR(255) NOT NULL,
    author VARCHAR(255),
    publicationYear INT NOT NULL,
    genre VARCHAR(255)
);

-- Insert data into the Book table
INSERT INTO Book (id, title, author, publicationYear, genre) VALUES
